<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Plot</th>
      <th>Cast</th>
      <th>Genre</th>
      <th>Movie length</th>
      <th>Release date</th>
      <th>Reviews</th>
      <th>Rating</th>
      <th>Movie url</th>
      <th>Movie poster</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.plot %></td>
        <td><%= movie.cast %></td>
        <td><%= movie.genre %></td>
        <td><%= movie.movie_length %></td>
        <td><%= movie.release_date %></td>
        <td><%= movie.reviews %></td>
        <td><%= movie.rating %></td>
        <td>
          <video width="1200" controls>
            <source src=" <%= movie.movie_url %>" type="video/mp4">
          Your browser does not support the video tag.
          </video>
        </td>
        <td><%= movie.movie_poster %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

